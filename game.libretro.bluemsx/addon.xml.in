<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.bluemsx"
		name="MSX (BlueMSX)"
		version="2.9.2"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
                   library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>msx</platforms>
		<extensions>rom|ri|mx1|mx2|col|sg|sc</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<supports_keyboard>false</supports_keyboard>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">BlueMSX v2.9.2</summary>
		<description>BlueMSX is a rich MSX emulator. It supports most common machines and a wide variety of extension hardware.

Supported extensions: .rom, .ri, .mx1, .mx2, .col, .sg, .sc

Authors: Daniel Vik, Benoit Delvaux, Tomas Karlsson, Johan van Leur, Ricardo Bittencourt and Ray Zero</description>
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<nofanart>true</nofanart>
	</extension>
</addon>
